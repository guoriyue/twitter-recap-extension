{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "X Twitter Recap",
  "version": "0.0.1",
  "description": "Chrome extension for X Twitter recap of your year",
  "background": {
    "service_worker": "src/pages/background/index.js"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "icon.png"
  },
  "icons": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png",
      "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "icon.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ]
}